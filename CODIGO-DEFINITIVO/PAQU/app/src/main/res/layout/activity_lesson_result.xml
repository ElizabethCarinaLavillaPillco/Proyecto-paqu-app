<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_result"
    android:fillViewport="true"
    tools:context=".activities.LessonResultActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header con logo/icono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_llama_app"
                app:tint="@color/ic_logo_background" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Resultado del Reto"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="12dp" />

            <Space
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <!-- AnimaciÃ³n Lottie Principal -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieResult"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:lottie_rawRes="@raw/animation_llama_terminoleccion"

            android:layout_marginBottom="8dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false" />

        <!-- TÃ­tulo del Resultado -->
        <TextView
            android:id="@+id/tvResultTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:text="Â¡Felicidades!"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" />

        <!-- SubtÃ­tulo -->
        <TextView
            android:id="@+id/tvResultSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completaste el reto contrarreloj"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp"
            android:lineSpacingExtra="4dp" />

        <!-- Card de EstadÃ­sticas (solo visible en Ã©xito) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/moradit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- TÃ­tulo de la card -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Resumen del DesempeÃ±o"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="20dp" />

                <!-- Grid de estadÃ­sticas -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false"
                    android:padding="8dp">

                    <!-- Tiempo -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_stat_item"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_timer"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/morado" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiempo"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvTimeResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45s"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- PrecisiÃ³n -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_stat_item"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_target"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/rosado" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PrecisiÃ³n"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAccuracyResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="80%"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Experiencia -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_stat_item"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_star"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/morado" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXP+"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvExpResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+150"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Racha -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_stat_item"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_flame"
                            android:layout_marginBottom="8dp"
                            app:tint="@color/morado" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Racha"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvStreakResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7 dÃ­as"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </GridLayout>

                <!-- Mensaje de racha especial -->
                <TextView
                    android:id="@+id/tvStreakMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Â¡Nueva racha de 7 dÃ­as! ðŸŽ‰"
                    android:textColor="@color/morado"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_streak_message"
                    android:padding="12dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- SecciÃ³n de Recompensas (solo Ã©xito) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#40FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_llama_app"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Â¡Recompensa Obtenida!"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Has desbloqueado nuevo contenido"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:alpha="0.8" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_unlock"
                    app:tint="@color/verde" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- BotÃ³n de Continuar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CONTINUAR"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_arrow_forward"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"
            app:iconTint="@color/white"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.ElevatedButton" />

        <!-- OpciÃ³n adicional para fallos -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRetry"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="VOLVER A INTENTAR"
            android:textColor="@color/morado"
            android:textSize="14sp"
            app:cornerRadius="24dp"
            app:strokeColor="@color/morado"
            app:strokeWidth="2dp"
            android:backgroundTint="@android:color/transparent"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>