<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <!-- Confetti de fondo (ocupa toda la pantalla) -->
        <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieConfetti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/confetti"
        app:lottie_loop="false" />

    <!-- Contenido central -->
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog_celebrations"
        android:padding="32dp">

        <!-- Animación de llama feliz -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLlama"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_rawRes="@raw/animation_llama_terminoleccion"
            app:lottie_loop="false" />

        <!-- Mensaje de celebración -->
        <TextView
            android:id="@+id/tvCelebration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Excelente!"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:letterSpacing="0.02" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completaste el reto"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:alpha="0.9" />

        <!-- Estrellas de puntuación -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:layout_margin="4dp"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:layout_margin="4dp"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_star"
                android:layout_margin="4dp"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>