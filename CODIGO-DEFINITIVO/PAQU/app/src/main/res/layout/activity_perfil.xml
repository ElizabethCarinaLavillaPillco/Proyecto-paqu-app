<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".perfilActivity">

    <!-- Cabecera fija -->
    <FrameLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:background="@color/morado"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/llamaparaperifl" />

        <ImageButton
            android:id="@+id/tuercaIcon"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="top|end"
            android:layout_margin="12dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/tuercaicon"
            android:contentDescription="Configuración" />
    </FrameLayout>

    <!-- Contenido con scroll -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Nombre de usuario -->
            <TextView
                android:id="@+id/tvUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Nombre usuario xdd"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/fredoka_one"
                android:text=" @Usuario Se unió en de 20XX "
                android:textColor="@color/grey" />

            <!-- Idioma -->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="61dp"
                android:layout_height="35dp"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/cuscoicon" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idioma"
                android:fontFamily="@font/fredoka_one"
                android:layout_marginTop="8dp" />

            <!-- Seguidores y Siguiendo -->
            <LinearLayout
                android:id="@+id/LinearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/personasicono" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fredoka_one"
                    android:text="Siguiendo" />

                <TextView
                    android:id="@+id/tvSiguiendo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fredoka_one"
                    android:text="0" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/personasicono" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/fredoka_one"
                    android:text="Seguidores" />

                <TextView
                    android:id="@+id/tvSeguidores"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/fredoka_one"
                    android:text="0" />
            </LinearLayout>

            <!-- Botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btnAgregarAmigos"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Agrega amigos"
                    android:fontFamily="@font/fredoka_one"
                    app:icon="@drawable/agregarpersonaicono" />

                <Button
                    android:id="@+id/btnCompartirPerfil"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    app:icon="@drawable/compartir" />
            </LinearLayout>

            <!-- Estadísticas -->
            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Resumen"
                android:textSize="20sp"
                android:fontFamily="@font/fredoka_one" />

            <!-- EXP -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/rayoicono" />

                <TextView
                    android:id="@+id/tvExp"
                    android:layout_width="30dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/fredoka_one"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:text="0" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EXP Totales"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/fredoka_one" />
            </LinearLayout>

            <!-- Puntaje -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/cuscoicon" />

                <TextView
                    android:id="@+id/tvPuntaje"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/fredoka_one"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puntaje en Quechua"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/fredoka_one" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Barra inferior fija -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>
