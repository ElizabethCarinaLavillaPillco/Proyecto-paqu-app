<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5E9FF"> <!-- Fondo lila claro -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Barra de progreso -->

        <!-- Vidas -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="296dp"
            android:layout_height="12dp"
            android:layout_marginBottom="16dp"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/progress_bar_lila" />

        <LinearLayout
            android:layout_width="34dp"
            android:layout_height="46dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Vidas"
                android:src="@drawable/corazonicon" />

            <TextView
                android:id="@+id/livesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:text="ESCUCHAR - UYARIY"
            android:textColor="#A259FF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Instrucción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona la imagen correcta"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Botón audio central -->
        <LinearLayout
            android:id="@+id/audioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_gravity="center"
            android:background="@drawable/audio_button_bg"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_audio"
                android:tint="#000000" />

            <TextView
                android:id="@+id/tvPalabraEscuchar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Allin p'unchay"
                android:textColor="#000000"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Opciones -->
        <GridLayout
            android:id="@+id/optionsGrid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:columnCount="2"
            android:rowCount="2">

            <!-- Opción: t’anta wawa -->
            <LinearLayout
                android:id="@+id/opcion1"
                android:layout_width="3dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/option_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/buenos_dias" />

                <TextView
                    android:id="@+id/txtImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Buenos días"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Opción: ch’usaqchakuy -->
            <LinearLayout
                android:id="@+id/opcion2"
                android:layout_width="2dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/option_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/buenas_noches" />

                <TextView
                    android:id="@+id/txtImg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Buenas noches"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Opción: wiñaypaq -->
            <LinearLayout
                android:id="@+id/opcion3"
                android:layout_width="4dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/option_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dormir" />

                <TextView
                    android:id="@+id/txtImg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Dormir"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Opción: samay -->
            <LinearLayout
                android:id="@+id/opcion4"
                android:layout_width="5dp"
                android:layout_height="185dp"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:background="@drawable/option_background"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/samay" />

                <TextView
                    android:id="@+id/txtImg4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Descansar"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
        </GridLayout>
        <!-- Botón comprobar -->


        <!-- Botón comprobar -->
        <Button
            android:id="@+id/checkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPROBAR"
            android:enabled="false"
            android:backgroundTint="#A259FF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:padding="16dp" />
    </LinearLayout>
</RelativeLayout>
