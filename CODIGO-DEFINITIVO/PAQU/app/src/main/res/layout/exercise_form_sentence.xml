<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Pregunta -->
        <TextView
            android:id="@+id/tvQuestionSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forma la oración correcta:"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="4dp" />

        <!-- Botón de audio -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPlayAudioSentence"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text="🔊 Escuchar"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:cornerRadius="24dp"
            app:icon="@drawable/ic_volume_up"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/white"
            android:backgroundTint="@color/morado"
            android:layout_marginBottom="24dp" />

        <!-- Área de respuesta (oración formada) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/moradit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tu oración:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexboxAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:background="@drawable/bg_answer_area"
                    android:padding="12dp"
                    app:flexWrap="wrap"
                    app:alignItems="flex_start"
                    app:alignContent="flex_start" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Palabras disponibles -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Palabras disponibles:"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <com.google.android.flexbox.FlexboxLayout
                    android:id="@+id/flexboxWords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:flexWrap="wrap"
                    app:justifyContent="center"
                    app:alignItems="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón de verificar -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckSentence"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="VERIFICAR"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_check"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/white"
            android:backgroundTint="@color/verde"
            android:enabled="false" />

        <!-- Instrucciones -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Toca las palabras para formar la oración"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:alpha="0.7" />

    </LinearLayout>

</ScrollView>