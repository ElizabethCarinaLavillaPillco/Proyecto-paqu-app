<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado seleccionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#D1B3FF" /> <!-- Lila claro seleccionado -->
            <stroke android:width="3dp" android:color="#A259FF" /> <!-- Borde lila fuerte -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Gris claro -->
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>
